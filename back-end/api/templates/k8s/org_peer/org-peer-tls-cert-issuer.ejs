---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: <%= peerOrg %>-tls-cert-issuer
spec:
  isCA: true
  privateKey:
    algorithm: ECDSA
    size: 256
  commonName: <%= peerOrg %>.example.com
  secretName: <%= peerOrg %>-tls-cert-issuer-secret
  issuerRef:
    name: root-tls-cert-issuer
    kind: Issuer
    group: cert-manager.io

---
apiVersion: cert-manager.io/v1
kind: Issuer
metadata:
  name: <%= peerOrg %>-tls-cert-issuer
spec:
  ca:
    secretName: <%= peerOrg %>-tls-cert-issuer-secret




