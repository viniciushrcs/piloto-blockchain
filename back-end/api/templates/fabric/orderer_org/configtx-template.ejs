---
Organizations:

  - &OrdererOrg
    Name: OrdererOrg
    SkipAsForeign: false
    ID: OrdererMSP
    MSPDir: ./channel-msp/ordererOrganizations/<%= ordererOrg %>/msp
    Policies:
      Readers:
        Type: Signature
        Rule: "OR('OrdererMSP.member')"
      Writers:
        Type: Signature
        Rule: "OR('OrdererMSP.member')"
      Admins:
        Type: Signature
        Rule: "OR('OrdererMSP.member')"
      Endorsement:
        Type: Signature
        Rule: "OR('OrdererMSP.member')"

    OrdererEndpoints:
      - <%= ordererOrg %>-orderer1.${ORG0_NS}.svc.cluster.local:6050
<% for (let i = 0; i < peerOrgs.length; i++) { %>
  - &Org<%= i %>
    Name: Org<%= i %>MSP
    ID: Org<%= i %>MSP
    MSPDir: ./channel-msp/peerOrganizations/<%= peerOrgs[i] %>/msp
    Policies:
      Readers:
        Type: Signature
        Rule: "OR('Org<%= i %>MSP.member')"
      Writers:
        Type: Signature
        Rule: "OR('Org<%= i %>MSP.member')"
      Admins:
        Type: Signature
        Rule: "OR('Org<%= i %>MSP.member')"
      Endorsement:
        Type: Signature
        Rule: "OR('Org<%= i %>MSP.member')"

    AnchorPeers:
      - Host: <%= peerOrgs[i] %>-peer1.${ORG1_NS}.svc.cluster.local
        Port: 7051
<% } %>
Capabilities:
  Channel: &ChannelCapabilities
    V2_0: true
  Orderer: &OrdererCapabilities
    V2_0: true
  Application: &ApplicationCapabilities
    V2_0: true

Application: &ApplicationDefaults
  Policies: &ApplicationDefaultPolicies
    LifecycleEndorsement:
      Type: ImplicitMeta
      Rule: "ANY Endorsement"
    Readers:
      Type: ImplicitMeta
      Rule: "ANY Readers"
    Writers:
      Type: ImplicitMeta
      Rule: "ANY Writers"
    Admins:
      Type: ImplicitMeta
      Rule: "ANY Admins"
    Endorsement:
      Type: ImplicitMeta
      Rule: "ANY Endorsement"

  Capabilities:
    <<: *ApplicationCapabilities

Orderer: &OrdererDefaults
  # OrdererType: solo
  # Addresses:
  #   - <%= ordererOrg %>-orderer1.${ORG0_NS}.svc.cluster.local:6050
  OrdererType: etcdraft

  EtcdRaft:
    Consenters:
      - Host: <%= ordererOrg %>-orderer1
        Port: 6050
        ClientTLSCert: ./channel-msp/ordererOrganizations/<%= ordererOrg %>/orderers/<%= ordererOrg %>-orderer1/tls/signcerts/tls-cert.pem
        ServerTLSCert: ./channel-msp/ordererOrganizations/<%= ordererOrg %>/orderers/<%= ordererOrg %>-orderer1/tls/signcerts/tls-cert.pem

  Policies:
    Readers:
      Type: ImplicitMeta
      Rule: "ANY Readers"
    Writers:
      Type: ImplicitMeta
      Rule: "ANY Writers"
    Admins:
      Type: ImplicitMeta
      Rule: "ANY Admins"
    BlockValidation:
      Type: ImplicitMeta
      Rule: "ANY Writers"

  BatchTimeout: 2s
  BatchSize:
    MaxMessageCount: 10
    AbsoluteMaxBytes: 99 MB
    PreferredMaxBytes: 512 KB

  Capabilities:
    <<: *OrdererCapabilities

Channel: &ChannelDefaults
  Policies:
    Readers:
      Type: ImplicitMeta
      Rule: "ANY Readers"
    Writers:
      Type: ImplicitMeta
      Rule: "ANY Writers"
    Admins:
      Type: ImplicitMeta
      Rule: "ANY Admins"

  Capabilities:
    <<: *ChannelCapabilities

Profiles:
  channeldefaultProfile:
    <<: *ChannelDefaults
    Orderer:
      <<: *OrdererDefaults
      Organizations:
        - *OrdererOrg
      Capabilities: *OrdererCapabilities
    Application:
      <<: *ApplicationDefaults
      Organizations:<% for (let i = 0; i < peerOrgs.length; i++) { %>
        - *Org<%= i %><% } %>
      Capabilities: *ApplicationCapabilities
