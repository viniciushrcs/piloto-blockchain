{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "./*.ts",
    "helpers/helpers.ts",
    "helpers/generate-yaml.ts",
    "helpers/generate-artifacts.ts",
    "helpers/create-files-from-template.ts",
    "config/config.ts",
    "src/**/*.d.ts"
  ]
}